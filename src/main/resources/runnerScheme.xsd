<xs:element name="runner">
    <xs:complexType>
        <xs:sequence>
            <xs:element name="seedtext" type="xs:string"/>
            <xs:element name="jesternames" type="xs:string"/>
            <xs:element name="llmprompt" type="xs:string"/>
            <xs:element name="llmtimeout" type="xs:int"/>
            <xs:element name="jesters" type="xs:int"/>
            <xs:element name="gridsize" type="xs:int"/>
            <xs:element name="minimumpassagelength" type="xs:int"/>
            <xs:element name="maximumpassagelength" type="xs:int"/>
